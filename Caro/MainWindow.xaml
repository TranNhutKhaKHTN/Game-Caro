<Window x:Class="Caro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caro"
        mc:Ignorable="d"
        Title="MainWindow" Height="527" Width="800" Loaded="Window_Loaded">
    <Canvas x:Name="Canvas">
        <Label Content="Game Caro" FontSize="50" Width="585" HorizontalContentAlignment="Center"></Label>
        <TextBlock Height="83" Width="86" Canvas.Left="542" Canvas.Top="67"></TextBlock>
        <Label Content="Turn: " FontSize="30" Canvas.Left="525" Canvas.Top="171" Width="76"></Label>
        <Label Name="turn" Content="X" Foreground="Red" FontSize="30" Canvas.Left="613" Canvas.Top="171" Width="37"></Label>
        <Button Content="Save" Click="Save_Click" Height="26" Width="80" Canvas.Left="542" Canvas.Top="240"></Button>
        <Button Content="Load" Click="Load_Click" Height="26" Width="80" Canvas.Left="542" Canvas.Top="270"></Button>
        <Button Content="Reset" Click="Reset_Click" Height="26" Width="80" Canvas.Left="542" Canvas.Top="300"></Button>
    </Canvas>
</Window>
